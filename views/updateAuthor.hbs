<form class="col s12" action="/author/update/{{book.id}}" method="post"  id="author">
    <div class="row">
        
        <div class="input-field col s6">
            <select name="authorId" form="author">
                {{#each author}}
                <option value={{id}}>{{name}}</option>
                {{/each}}
            </select>            
        </div>
        

    </div>
    <button class="waves-effect waves-light btn" type="submit">Edit</button>
</form>

<style>
    select{
        display: block;
    }
</style>